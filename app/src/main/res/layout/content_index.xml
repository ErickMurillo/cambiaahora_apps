<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.emurillo.cambiaahora.IndexActivity"
    tools:showIn="@layout/activity_index">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sopa de Letras"
        android:id="@+id/sopa"
        android:layout_marginTop="49dp"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/directorio"
        android:layout_alignStart="@+id/directorio"
        android:layout_alignRight="@+id/directorio"
        android:layout_alignEnd="@+id/directorio" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Directorio"
        android:id="@+id/directorio"
        android:layout_marginTop="43dp"
        android:layout_below="@+id/sopa"
        android:layout_alignLeft="@+id/test"
        android:layout_alignStart="@+id/test"
        android:layout_alignRight="@+id/test"
        android:layout_alignEnd="@+id/test" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Test de violencia"
        android:id="@+id/test"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Violentometro"
        android:id="@+id/button4"
        android:layout_marginTop="55dp"
        android:layout_below="@+id/test"
        android:layout_alignLeft="@+id/test"
        android:layout_alignStart="@+id/test"
        android:layout_alignRight="@+id/test"
        android:layout_alignEnd="@+id/test" />
</RelativeLayout>
